{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <div class="container m-5">
    <h1>Liste des classes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Cycle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.cycleId }}</td>
                <td>
                    <a href="{{ path('classe_show', {'id': classe.id}) }}" class="btn btn-primary me-1">Voir la classe</a>
                    <a href="{{ path('classe_edit', {'id': classe.id}) }}" class="btn btn-warning">Modifier la classe</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classe_new') }}" class="btn btn-primary">Ajouter la classe</a>
    </div>
{% endblock %}
