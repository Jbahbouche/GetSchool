{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
<div class="container m-5">
    

    <h1>Classe {{ classe.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
                <td>Cycle</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ classe.nom }}</td>
                <td>{{ cycle }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Liste des individus de la classe</h3>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>Prénom</td>
                <td>Role</td>
            </tr>
            {% for user in users %}
            <tr>
                <th> {{user.nom}} </th>
                <td>{{user.prenom}}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classe_index') }}" class="btn btn-warning me-2">Retour à la liste</a>

    <a href="{{ path('classe_edit', {'id': classe.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('classe/_delete_form.html.twig') }}
    </div>
{% endblock %}
