{% extends 'base.html.twig' %}

{% block title %}Cycle index{% endblock %}

{% block body %}
<div class="container m-5">
    <h1>Gestion des Cycles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for cycle in cycles %}
            <tr>
                <td>{{ cycle.id }}</td>
                <td>{{ cycle.nom }}</td>
                <td>
                    <a href="{{ path('cycle_show', {'id': cycle.id}) }}"  class="btn btn-warning">Voir les d√©tails</a>
                    <a href="{{ path('cycle_edit', {'id': cycle.id}) }}"  class="btn btn-warning">Modifier</a>
                </td>
                <td>
                    {{ include('cycle/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cycle_new') }}"  class="btn btn-success">Ajouter un cycle</a></div>
{% endblock %}
