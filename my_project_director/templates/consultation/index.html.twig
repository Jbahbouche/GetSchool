{% extends 'base.html.twig' %}

{% block title %}Hello ConsultationController!{% endblock %}

{% block body %}
<div class="container m-5">
    <h2 class="my-3">Liste des notes de {{ etudiant.nom ~' '~ etudiant.prenom}}</h2>
    <table class="table table-hover table-striped">
    <thead>
        <tr>
        <th scope="col">Note</th>
        <th scope="col">Mati√®re</th>
        {% if app.user.roles == ["ROLE_PARENT"] %}
        <th scope="col">Commentaires</th>
        {% endif %}
        </tr>
    </thead>
    <tbody>
    {% for note in notes %}
        <tr>
            <td>{{ note.score }}</td>
            <td>{{ note.matiere }}</td>
            {% if app.user.roles == ["ROLE_PARENT"] %}
            <td>{{ note.commentaire }}</td>
            {% endif %}
        </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
