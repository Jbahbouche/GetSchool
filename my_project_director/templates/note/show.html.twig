{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
<div class="container m-5">
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ note.score }}</td>
            </tr>
            <tr>
                <th>Matiere</th>
                <td>{{ note.matiere }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ note.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('note_index') }}" class="btn btn-warning me-2">Retour</a>

    <a href="{{ path('note_edit', {'id': note.id}) }}"class="btn btn-warning me-2">Modifier</a>

    {{ include('note/_delete_form.html.twig') }}
    </div>
{% endblock %}
